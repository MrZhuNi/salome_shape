      </shape_selector>
      <shape_selector id="law_definition"
                label="Select a definition curve"
                icon=""
                tooltip=""
                shape_types="edge">
        <validator id="GeomValidators_ShapeType" parameters="edge"/>
      </shape_selector>
      <boolvalue id="reverse_direction"
          label="Reverse"
          default="false"
          tooltip="Reverse path direction"/>
    
  </box>
  </toolbox>
